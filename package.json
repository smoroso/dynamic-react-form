{
  "name": "dynamic-react-form",
  "version": "1.0.0",
  "description": "Using React, Node.js, Express and Webpack, dynamically creating a complex form state management system",
  "main": "src/server/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "npm run build && node src/transpiled-server/index.js",
    "dev": "concurrently 'npm run server' 'npm run client'",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "test-client": "npm run lint && npm run test-mocha-client && cypress run --project ./src/client",
    "test-client-open": "cypress open --project ./src/client",
    "test-mocha-client": "mocha --require @babel/register --require @babel/polyfill ./src/client/**/*.test.js --exit",
    "transpile-server": "rm -rf src/transpiled-server && npx babel src/server  --out-dir src/transpiled-server",
    "server": "nodemon --watch src/server --exec 'npm run transpile-server && PORT=8080 node src/transpiled-server/server.js'",
    "test-server": "npm run transpile-server && npm run test-mocha-server",
    "test-mocha-server": "mocha ./src/transpiled-server/*.test.js ./src/transpiled-server/**/*.test.js --exit",
    "lint": "eslint src/server src/client && stylelint src/client/**/*.scss",
    "test": "npm run test-server && npm run test-client"
  },
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.4",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/register": "^7.21.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^9.1.2",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.3",
    "cypress": "^12.8.1",
    "eslint": "^8.36.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.5",
    "mocha": "^10.2.0",
    "nock": "^13.3.0",
    "node-sass": "^8.0.0",
    "nodemon": "^2.0.22",
    "prop-types": "^15.8.1",
    "sass-loader": "^13.2.1",
    "sinon": "^15.0.2",
    "style-loader": "^3.3.2",
    "stylelint": "^15.3.0",
    "stylelint-scss": "^4.5.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.1"
  }
}
