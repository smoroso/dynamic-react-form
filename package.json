{
  "name": "dynamic-react-form",
  "version": "1.0.0",
  "description": "Using React, Node.js, Express and Webpack, dynamically creating a complex form state management system",
  "main": "src/server/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "npm run build && node src/transpiled-server/index.js",
    "dev": "concurrently 'npm run server' 'npm run client'",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "test-client": "npm run lint && cypress run --project ./src/client",
    "test-client-open": "cypress open --project ./src/client",
    "transpile-server": "rm -rf src/transpiled-server && npx babel src/server  --out-dir src/transpiled-server",
    "server": "nodemon --watch src/server --exec 'npm run transpile-server && PORT=8080 node src/transpiled-server/server.js'",
    "test-server": "npm run transpile-server && npm run test-mocha",
    "test-mocha": "mocha ./src/transpiled-server/*.test.js ./src/transpiled-server/**/*.test.js --exit",
    "lint": "eslint src/server src/client && stylelint src/client/**/*.scss",
    "test": "npm run test-server && npm run test-client"
  },
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "express": "^4.16.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "clean-webpack-plugin": "^2.0.1",
    "concurrently": "^4.1.0",
    "css-loader": "^2.1.1",
    "cypress": "^3.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.6.0",
    "mocha": "^6.1.4",
    "nock": "^10.0.6",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.11",
    "prop-types": "^15.7.2",
    "sass-loader": "^7.1.0",
    "sinon": "^7.3.2",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.1",
    "stylelint-scss": "^3.6.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  }
}
